<style>
    .products {
        margin: 30mm 0;
        text-align: center;
        border-collapse: collapse;
        height: 90%;
    }
    .products td {
        width: 20%;
        font-size: 10px;
    }
    .products th {
        color: #00AB61;
        height: 35px;
        vertical-align: middle;
    }
    .products, .products tr, .products td {
        border-bottom: solid 1px black;
        height: 20px;
        vertical-align: middle;
    }
    .products, .products th, .products td {
        border-bottom: solid 1px black;
    }
    .tableheader .title {
            width: 500px;
            text-align:center;
    }
    .header h1 {
        color: #FFA100;
        font-size: 20px;
    }
    .body {
        background-color: #f3e5cf;
        width: 100%;
        height:100%;
    }

</style>
<page backtop="-10mm" backright="-10mm" backbottom="-10mm" backleft="-10mm">
    <div class="body">
        <page_header>
            <div class="header">
                <table class="tableheader">
                    <tbody>
                        <tr>
                            <td style="width:fit-content">
                                <img src="{{ asset('assets/brand.png') }}" width="300" height="auto" />
                            </td>
                            <td class="title">
                                <h1>Produits actuellement en promotions</h1>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </page_header>
        <table class="products">
            <thead>
                <tr>
                    <th>Nom du produit</th>
                    <th>Cat√©gorie</th>
                    <th>Description</th>
                    <th>Ancien prix</th>
                    <th>Nouveau prix</th>
                </tr>
            </thead>
            <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.label }}</td>
                    <td>{{ product.category }}</td>
                    <td>{{ product.description }}</td>
                    <td>{{ product.price }}</td>
                    <td>{{ product.newPrice }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</page>